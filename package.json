{
  "name": "rujealfon-portfolio",
  "version": "1.0.0",
  "type": "module",
  "description": "Ruje Alfon's Portfolio Website",
  "scripts": {
    "build-css": "bunx postcss ./src/input.css -o ./dist/output.css --watch",
    "build-css-prod": "mkdir -p dist && bunx postcss ./src/input.css -o ./dist/output.css",
    "dev": "bun run build-css",
    "build": "bun run build-css-prod",
    "clean": "rm -rf dist/",
    "prebuild": "bun run clean"
  },
  "devDependencies": {
    "tailwindcss": "^4.1.10",
    "@tailwindcss/postcss": "^4.1.10",
    "postcss": "^8.4.31",
    "postcss-cli": "^11.0.0",
    "@types/bun": "latest"
  },
  "keywords": [
    "portfolio",
    "frontend",
    "vue",
    "javascript",
    "web-developer"
  ],
  "author": "Ruje Alfon",
  "license": "MIT",
  "private": true,
  "peerDependencies": {
    "typescript": "^5"
  }
}
